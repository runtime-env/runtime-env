{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "exclude-paths": ["examples"],
  "packages": {
    "packages/cli": {
      "component": "cli",
      "include-component-in-tag": true,
      "include-v-in-tag": false,
      "pull-request-title-pattern": "chore(release): @runtime-env/cli@${version}",
      "tag-separator": ""
    },
    "packages/vite-plugin": {
      "component": "vite-plugin",
      "include-component-in-tag": true,
      "include-v-in-tag": false,
      "pull-request-title-pattern": "chore(release): @runtime-env/vite-plugin@${version}",
      "tag-separator": ""
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": false
    }
  ]
}
